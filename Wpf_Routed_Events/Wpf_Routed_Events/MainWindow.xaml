<Window x:Class="Wpf_Routed_Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Routed_Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Three Types of Events in WPF: -->
        <!-- Direct Events-->
        <Button Content="Click Me" MouseUp="Button_MouseUp" Width="150" Height="100"></Button>
        <!-- Root Events-->
        <Button Content="Click Me" PreviewMouseUp="Button_PreviewMouseUp" Width="150" Height="100"></Button>
        <!-- Tumbling Events-->
        <Button Content="Click Me" PreviewMouseUp="Button_PreviewMouseUp" Width="150" Height="100"></Button>

    </Grid>
</Window>
