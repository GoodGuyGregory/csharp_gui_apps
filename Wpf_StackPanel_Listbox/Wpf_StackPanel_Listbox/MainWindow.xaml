<Window x:Class="Wpf_StackPanel_Listbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_StackPanel_Listbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- Below is known as a Logical Tree in XAML-->
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="20"> Hello World!</TextBlock>
        <ListBox Height="120" Width="150" Margin="24">
            <ListBoxItem Content="Item 1"/>
            <ListBoxItem Content="Item 2"/>
            <ListBoxItem Content="Item 3"/>
        </ListBox>
        <Button Content="Click Me" Click="Button_Click" Width="150" Margin="10"></Button>
    </StackPanel>
</Window>
